<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".CarReportCarAccidentFragment">

    <ScrollView android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp">
        <TableLayout android:layout_width="match_parent"
                     android:layout_height="wrap_content">
            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    style="@style/CodeFont"
                    android:text="@string/cr_accident" />
            <View
                    android:layout_width="match_parent"
                    android:layout_height="3px"
                    android:background="?android:attr/listDivider"/>
            <TableRow>
                <RelativeLayout android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                    <TextView android:id="@+id/text"
                                android:layout_width="wrap_content"
                              android:layout_height="wrap_content"
                              android:text="@string/cr_car_top"
                              android:textSize="18sp"/>
                    <ImageView android:id="@+id/cr_car_top"
                               android:layout_width="wrap_content"
                               android:layout_height="wrap_content"
                               android:layout_below="@id/text"
                               android:src="@drawable/out_base_image"/>
                    <TextView android:id="@+id/level"
                              android:layout_width="wrap_content"
                              android:layout_height="wrap_content"
                              android:layout_toRightOf="@id/cr_car_top"
                              android:text="@string/cr_ac_level"
                              android:textSize="30sp"/>
                    <TextView android:id="@+id/level_comment"
                              android:layout_width="200dp"
                              android:layout_height="wrap_content"
                              android:layout_below="@id/level"
                              android:layout_alignLeft="@id/level"
                              android:layout_marginTop="10dp"
                              android:text="@string/cr_ac_level_comment"
                              android:maxLines="10"
                              android:textSize="18sp"/>
                </RelativeLayout>
            </TableRow>
            <LinearLayout
                    android:layout_height="wrap_content"
                    android:layout_width="match_parent"
                    android:orientation="horizontal"
                    android:layout_marginTop="10dp">
                <RelativeLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1">
                    <ImageView android:id="@+id/rectangle_normal"
                               android:layout_width="18dp"
                               android:layout_height="18dp"
                               android:src="@drawable/rectangle_normal"
                               android:layout_marginLeft="5dp"/>
                    <TextView android:layout_height="wrap_content"
                              android:layout_width="wrap_content"
                              android:text="@string/ac_normal"
                              android:layout_marginLeft="5dp"
                              android:layout_toRightOf="@id/rectangle_normal"/>
                </RelativeLayout>

                <RelativeLayout android:orientation="horizontal"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1">
                    <ImageView android:id="@+id/rectangle_repaint"
                               android:layout_width="18dp"
                               android:layout_height="18dp"
                               android:src="@drawable/rectangle_repaint"/>
                    <TextView android:layout_height="wrap_content"
                              android:layout_width="wrap_content"
                              android:text="@string/ac_repaint"
                              android:layout_marginLeft="5dp"
                              android:layout_toRightOf="@id/rectangle_repaint"/>
                </RelativeLayout>

                <RelativeLayout android:orientation="horizontal"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1">
                    <ImageView android:id="@+id/rectangle_repaint_and_repair"
                               android:layout_width="18dp"
                               android:layout_height="18dp"
                               android:src="@drawable/rectangle_repaint_and_repair"/>
                    <TextView android:layout_height="wrap_content"
                              android:layout_width="wrap_content"
                              android:text="@string/ac_repaint_and_repair"
                              android:layout_marginLeft="5dp"
                              android:layout_toRightOf="@id/rectangle_repaint_and_repair"/>
                </RelativeLayout>
            </LinearLayout>
            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    style="@style/CodeFont"
                    android:text="@string/cr_paint_result" />
            <View
                    android:layout_width="match_parent"
                    android:layout_height="3px"
                    android:background="?android:attr/listDivider"/>
            <TableRow>
                <EditText android:id="@+id/cr_paint_result_edit"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:minLines="3"
                        android:maxLines="100"
                        android:editable="false"
                        android:scrollbars="vertical"
                        android:text="@string/cr_paint_data"/>
            </TableRow>

            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    style="@style/CodeFont"
                    android:text="@string/cr_path_result" />
            <View
                    android:layout_width="match_parent"
                    android:layout_height="3px"
                    android:background="?android:attr/listDivider"/>
            <TableRow>
                <EditText android:id="@+id/cr_path_result_edit"
                          android:layout_width="match_parent"
                          android:layout_height="wrap_content"
                          android:minLines="3"
                          android:maxLines="100"
                          android:editable="false"
                          android:scrollbars="vertical"/>
            </TableRow>


            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    style="@style/CodeFont"
                    android:text="@string/cr_base_point_data" />
            <View
                    android:layout_width="match_parent"
                    android:layout_height="3px"
                    android:background="?android:attr/listDivider"/>

            <com.df.service.ExtendableGridView xmlns:android="http://schemas.android.com/apk/res/android"
                android:id="@+id/cr_base_point_data_gridView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:columnWidth="80dp"
                android:gravity="center"
                android:layout_alignParentBottom="true"
                android:layout_alignParentLeft="true"
                android:numColumns="4"
                android:isScrollContainer="false"
                android:stretchMode="columnWidth"/>

        </TableLayout>
    </ScrollView>

</LinearLayout>
