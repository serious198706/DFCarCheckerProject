<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".CarReportResultFragment">

    <ScrollView android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp">
        <TableLayout android:layout_width="match_parent"
                     android:layout_height="wrap_content">
            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    style="@style/CodeFont"
                    android:text="@string/cr_result" />
            <View
                    android:layout_width="match_parent"
                    android:layout_height="3px"
                    android:background="?android:attr/listDivider"/>
            <TableRow>
                <RelativeLayout android:layout_width="match_parent"
                                android:layout_height="wrap_content">
                    <TextView android:id="@+id/text"
                              android:layout_width="wrap_content"
                              android:layout_height="wrap_content"
                              android:text="@string/cr_outside_check"
                              android:textSize="18sp"/>
                    <ImageView android:id="@+id/cr_car_top"
                               android:layout_width="wrap_content"
                               android:layout_height="wrap_content"
                               android:layout_below="@id/text"
                               android:src="@drawable/out_base_image"/>
                    <TextView android:id="@+id/level"
                              android:layout_width="wrap_content"
                              android:layout_height="wrap_content"
                              android:layout_toRightOf="@id/cr_car_top"
                              android:text="@string/cr_total_level"
                              android:textSize="30sp"/>
                    <TextView android:id="@+id/level_comment"
                              android:layout_width="200dp"
                              android:layout_height="wrap_content"
                              android:layout_below="@id/level"
                              android:layout_alignLeft="@id/level"
                              android:layout_marginTop="10dp"
                              android:text="@string/cr_total_level_comment"
                              android:maxLines="10"
                              android:textSize="18sp"/>
                </RelativeLayout>
            </TableRow>
            <LinearLayout
                    android:layout_height="wrap_content"
                    android:layout_width="match_parent"
                    android:orientation="horizontal"
                    android:layout_marginTop="10dp">
                <RelativeLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1">
                    <ImageView android:id="@+id/out_color_diff"
                               android:layout_width="18dp"
                               android:layout_height="18dp"
                               android:src="@drawable/out_color_diff"
                               android:layout_marginLeft="5dp"/>
                    <TextView android:layout_height="wrap_content"
                              android:layout_width="wrap_content"
                              android:text="@string/out_color_diff"
                              android:layout_marginLeft="5dp"
                              android:layout_toRightOf="@id/out_color_diff"/>
                </RelativeLayout>

                <RelativeLayout android:orientation="horizontal"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1">
                    <ImageView android:id="@+id/out_scratch"
                               android:layout_width="18dp"
                               android:layout_height="18dp"
                               android:src="@drawable/out_scratch"/>
                    <TextView android:layout_height="wrap_content"
                              android:layout_width="wrap_content"
                              android:text="@string/out_scratch"
                              android:layout_marginLeft="5dp"
                              android:layout_toRightOf="@id/out_scratch"/>
                </RelativeLayout>

                <RelativeLayout android:orientation="horizontal"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1">
                    <ImageView android:id="@+id/out_trans"
                               android:layout_width="18dp"
                               android:layout_height="18dp"
                               android:src="@drawable/out_trans"/>
                    <TextView android:layout_height="wrap_content"
                              android:layout_width="wrap_content"
                              android:text="@string/out_trans"
                              android:layout_marginLeft="5dp"
                              android:layout_toRightOf="@id/out_trans"/>
                </RelativeLayout>

                <RelativeLayout android:orientation="horizontal"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1">
                    <ImageView android:id="@+id/out_scrape"
                               android:layout_width="18dp"
                               android:layout_height="18dp"
                               android:src="@drawable/out_scrape"/>
                    <TextView android:layout_height="wrap_content"
                              android:layout_width="wrap_content"
                              android:text="@string/out_scrape"
                              android:layout_marginLeft="5dp"
                              android:layout_toRightOf="@id/out_scrape"/>
                </RelativeLayout>
            </LinearLayout>

            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    style="@style/CodeFont"
                    android:text="@string/cr_outside_check_result" />
            <View
                    android:layout_width="match_parent"
                    android:layout_height="3px"
                    android:background="?android:attr/listDivider"/>
            <TableRow>
                <EditText android:id="@+id/cr_outside_check_result_edit"
                          android:layout_width="match_parent"
                          android:layout_height="wrap_content"
                          android:minLines="3"
                          android:maxLines="100"
                          android:editable="false"
                          android:scrollbars="vertical"
                          android:text="@string/cr_paint_data"/>
            </TableRow>

            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    style="@style/CodeFont"
                    android:text="@string/cr_inside_check_result" />
            <View
                    android:layout_width="match_parent"
                    android:layout_height="3px"
                    android:background="?android:attr/listDivider"/>
            <TableRow>
                <EditText android:id="@+id/cr_inside_check_result_edit"
                          android:layout_width="match_parent"
                          android:layout_height="wrap_content"
                          android:minLines="3"
                          android:maxLines="100"
                          android:editable="false"
                          android:scrollbars="vertical"/>
            </TableRow>

            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    style="@style/CodeFont"
                    android:text="@string/cr_engine_check_result" />
            <View
                    android:layout_width="match_parent"
                    android:layout_height="3px"
                    android:background="?android:attr/listDivider"/>
            <TableRow>
                <EditText android:id="@+id/cr_engine_check_result_edit"
                          android:layout_width="match_parent"
                          android:layout_height="wrap_content"
                          android:minLines="3"
                          android:maxLines="100"
                          android:editable="false"
                          android:scrollbars="vertical"/>
            </TableRow>

            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    style="@style/CodeFont"
                    android:text="@string/cr_function_check_result" />
            <View
                    android:layout_width="match_parent"
                    android:layout_height="3px"
                    android:background="?android:attr/listDivider"/>
            <TableRow>
                <EditText android:id="@+id/cr_function_check_result_edit"
                          android:layout_width="match_parent"
                          android:layout_height="wrap_content"
                          android:minLines="3"
                          android:maxLines="100"
                          android:editable="false"
                          android:scrollbars="vertical"/>
            </TableRow>
        </TableLayout>
    </ScrollView>
</LinearLayout>
