            <TableLayout android:id="@+id/ct_business_table"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TableRow>
                    <TextView
                        android:layout_height="wrap_content"
                        android:layout_width="0dp"
                        android:text="@string/ct_business_insurance_area"
                        android:layout_weight="1"
                        android:textSize="18sp"/>
                    <Spinner android:id="@+id/ct_business_insurance_area_spinner"
                        android:layout_height="wrap_content"
                        android:layout_width="0dp"
                        android:layout_weight="2"
                        android:entries="@array/ct_business_insurance_area_type"/>
                </TableRow>
                <TableRow>
                    <TextView
                        android:layout_height="wrap_content"
                        android:layout_width="0dp"
                        android:text="@string/ct_business_insurance_money"
                        android:layout_weight="1"
                        android:textSize="18sp"/>
                    <EditText android:id="@+id/ct_business_insurance_money_edit"
                        android:layout_height="wrap_content"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:phoneNumber="true"/>
                    <TextView android:layout_height="wrap_content"
                        android:layout_width="0dp"
                        android:text="@string/ci_money"
                        android:layout_weight="1"/>
                </TableRow>
                <TableRow>
                    <TextView
                        android:layout_height="wrap_content"
                        android:layout_width="0dp"
                        android:text="@string/ct_business_insurance_available_date"
                        android:layout_weight="1"
                        android:textSize="18sp"/>
                    <Spinner android:id="@+id/ct_business_insurance_available_date_year_spinner"
                        android:layout_height="wrap_content"
                        android:layout_width="0dp"
                        android:layout_weight="1"/>
                    <Spinner android:id="@+id/ct_business_insurance_available_date_month_spinner"
                        android:layout_height="wrap_content"
                        android:layout_width="0dp"
                        android:layout_weight="1"/>
                </TableRow>
                <TableRow>
                    <TextView
                        android:layout_height="wrap_content"
                        android:layout_width="0dp"
                        android:text="@string/ct_business_insurance_company"
                        android:layout_weight="1"
                        android:textSize="18sp"/>
                    <Spinner android:id="@+id/ct_business_insurance_company_spinner"
                        android:layout_height="wrap_content"
                        android:layout_width="0dp"
                        android:layout_weight="2"
                        android:entries="@array/ct_business_insurance_companies"/>
                </TableRow>
            </TableLayout>

            <TableRow android:id="@+id/ct_ported_procedure"
                android:visibility="gone">
                <TextView
                    android:layout_height="wrap_content"
                    android:layout_width="0dp"
                    android:text="@string/ct_ported_procedure"
                    android:layout_weight="1"
                    android:textSize="18sp"/>
                <Spinner android:id="@+id/ct_ported_procedure_spinner"
                    android:layout_height="wrap_content"
                    android:layout_width="0dp"
                    android:layout_weight="2"
                    android:entries="@array/ct_ported_prodecure_items"/>
            </TableRow>
            <TableRow>
                <TextView
                    android:layout_height="wrap_content"
                    android:layout_width="0dp"
                    android:text="@string/ct_backup_tire"
                    android:layout_weight="1"
                    android:textSize="18sp"/>
                <Spinner android:id="@+id/ct_backup_tire_spinner"
                    android:layout_height="wrap_content"
                    android:layout_width="0dp"
                    android:layout_weight="2"
                    android:entries="@array/ct_backup_tire_items"/>
            </TableRow>

            <TableRow>
                <TextView
                    android:layout_height="wrap_content"
                    android:layout_width="0dp"
                    android:text="@string/ct_backup_key"
                    android:layout_weight="1"
                    android:textSize="18sp"/>
                <Spinner android:id="@+id/ct_backup_key_spinner"
                    android:layout_height="wrap_content"
                    android:layout_width="0dp"
                    android:layout_weight="2"
                    android:entries="@array/existornot"/>
            </TableRow>
            <TableRow>
                <TextView
                    android:layout_height="wrap_content"
                    android:layout_width="0dp"
                    android:text="@string/ci_seller_name"
                    android:layout_weight="1"
                    android:textSize="18sp"/>
                <EditText android:id="@+id/ci_seller_name_edit"
                    android:layout_height="wrap_content"
                    android:layout_width="0dp"
                    android:layout_weight="2"/>
            </TableRow>
            <TableRow>
                <TextView
                    android:layout_height="wrap_content"
                    android:layout_width="0dp"
                    android:text="@string/ci_seller_id_number"
                    android:layout_weight="1"
                    android:textSize="18sp"/>
                <EditText android:id="@+id/ci_seller_id_number_edit"
                    android:layout_height="wrap_content"
                    android:layout_width="0dp"
                    android:layout_weight="2"/>
            </TableRow>
            <TableRow>
                <TextView
                    android:layout_height="wrap_content"
                    android:layout_width="0dp"
                    android:text="@string/ci_seller_phone_number"
                    android:layout_weight="1"
                    android:textSize="18sp"/>
                <EditText android:id="@+id/ci_seller_phone_number_edit"
                    android:layout_height="wrap_content"
                    android:layout_width="0dp"
                    android:inputType="phone"
                    android:layout_weight="2"/>
            </TableRow>
            <TableRow>
                <TextView
                    android:layout_height="wrap_content"
                    android:layout_width="0dp"
                    android:text="@string/ex_exchange_type"
                    android:layout_weight="2"
                    android:textSize="18sp"/>
                <Spinner
                    android:layout_height="wrap_content"
                    android:layout_width="0dp"
                    android:layout_weight="4"
                    android:entries="@array/ex_exchange_types"/>
            </TableRow>
            <!-- 手续录入部分结束 -->

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:drawableLeft="@drawable/comment_item"
                android:drawablePadding="10dp"
                style="@style/CodeFont"
                android:text="@string/comment" />

            <View
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:background="#000"/>
            <TableRow>
                <TextView
                    android:layout_height="wrap_content"
                    android:layout_width="0dp"
                    android:text="@string/cbi_comment"
                    android:layout_weight="1"
                    android:textSize="18sp"/>
                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:inputType="textMultiLine"
                    android:ems="10"
                    android:id="@+id/commentEdit"/>
            </TableRow>

            <ImageView android:id="@+id/image"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:contentDescription="@string/itemImage"/>
        </TableLayout>
    </LinearLayout>
</ScrollView>

