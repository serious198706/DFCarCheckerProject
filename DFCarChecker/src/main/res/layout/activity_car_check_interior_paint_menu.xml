<?xml version="1.0" encoding="utf-8"?>


<RadioGroup xmlns:android="http://schemas.android.com/apk/res/android"
            android:id="@+id/in_radio_group"
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:orientation="horizontal">
    <RadioButton android:id="@+id/in_dirty_radio"
                 android:layout_height="wrap_content"
                 android:layout_width="0dp"
                 android:layout_weight="1"
                 android:drawableLeft="@drawable/in_dirty"
                 android:text="@string/in_dirty"
                 android:checked="true"/>
    <RadioButton android:id="@+id/in_broken_radio"
                 android:layout_height="wrap_content"
                 android:layout_width="0dp"
                 android:layout_weight="1"
                 android:drawableLeft="@drawable/in_broken"
                 android:text="@string/in_broken"/>
</RadioGroup>
